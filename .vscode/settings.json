{
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "prettier.tabWidth": 4,
    "prettier.useTabs": false,
    "prettier.printWidth": 150,
    // "liveServer.settings.useLocalIp": true,
    // "liveServer.settings.port": 5600,
    "liveSassCompile.settings.formats": [
        {
            "format": "compressed",
            "extensionName": ".css",
            "savePath": "/dist/css"
        }
    ],
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#8f0a0a",
        "activityBar.background": "#8f0a0a",
        "activityBar.foreground": "#e7e7e7",
        "activityBar.inactiveForeground": "#e7e7e799",
        "activityBarBadge.background": "#54cf3c",
        "activityBarBadge.foreground": "#e7e7e7",
        "commandCenter.border": "#e7e7e799",
        "sash.hoverBorder": "#8f0a0a",
        "statusBar.background": "#600707",
        "statusBar.foreground": "#e7e7e7",
        "statusBarItem.hoverBackground": "#8f0a0a",
        "statusBarItem.remoteBackground": "#600707",
        "statusBarItem.remoteForeground": "#e7e7e7",
        "titleBar.activeBackground": "#600707",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.inactiveBackground": "#60070799",
        "titleBar.inactiveForeground": "#e7e7e799"
    },
    "peacock.color": "#600707"
}
